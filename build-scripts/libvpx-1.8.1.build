#! /bin/bash

# Libvpx 1.8.1
# Source: https://github.com/webmproject/libvpx/archive/v1.8.1/libvpx-1.8.1.tar.gz

sed -i 's/cp -p/cp/' build/make/Makefile &&

mkdir libvpx-build            &&
cd    libvpx-build            &&

../configure --prefix=/usr    \
             --enable-shared  \
             --disable-static &&
read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lp Libvpx-1.8.1 "make install"
