#! /bin/bash

patch -Np0 -i ../cairo-1.14.12-musl-stacksize.patch &&
./configure --prefix=/usr \
            --disable-lto \
            --disable-static \
            --enable-tee \
            --enable-xlib-xcb \
            --enable-gl $BUILD  &&
read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
