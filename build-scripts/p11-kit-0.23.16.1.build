#! /bin/bash

# p11-kit 0.23.16.1
# Source: https://github.com/p11-glue/p11-kit/releases/download/0.23.16.1/p11-kit-0.23.16.1.tar.gz

./configure --prefix=/usr     \
     --sysconfdir=/etc \
            --with-trust-paths=/etc/pki/anchors $BUILDTRUPLE &&
read -p "Compile?" && make -j2 && 
read -p "Install?" && sudo -S porg -lD "make install"
