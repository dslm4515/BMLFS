#! /bin/bash

# Libinput 1.13.4
# Source: https://www.freedesktop.org/software/libinput/libinput-1.13.4.tar.xz

mkdir build && cd    build &&
meson --prefix=$XORG_PREFIX \
      -Dudev-dir=/lib/udev  \
      -Ddebug-gui=false     \
      -Dtests=false         \
      -Ddocumentation=false \
      -Dlibwacom=false      \
      ..                    &&
read -p "Compile? " && ninja -j2 && 
read -p "Install? " && sudo -S porg -lp libinput-1.13.4 "ninja install"
