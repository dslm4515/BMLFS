#! /bin/bash

# source : https://downloads.xiph.org/releases/ogg/libogg-1.3.3.tar.xz

./configure --prefix=/usr --build=x86_64-linux-musl \
	    --disable-static \
            --docdir=/usr/share/doc/libogg-1.3.3 &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

