#! /bin/bash

# libogg 1.3.3
# source: https://downloads.xiph.org/releases/ogg/libogg-1.3.3.tar.xz

./configure --prefix=/usr $BUILDTRUPLE  \
            --disable-static \
            --docdir=/usr/share/doc/libogg-1.3.3  &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install"
