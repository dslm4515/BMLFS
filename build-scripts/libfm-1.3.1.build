#! /bin/bash

# libfm 1.3.1
# source: https://downloads.sourceforge.net/pcmanfm/libfm-1.3.1.tar.xz

./configure --prefix=/usr $BUILDTRUPLE     \
            --sysconfdir=/etc \
            --disable-static \
	    --with-gtk=3 \
	    --enable-udisks &&

read -p "Compile? " && make -j2 &&

read -p "Install? " && sudo -S porg -lD "make install"
