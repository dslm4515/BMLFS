#! /bin/bash

./configure --prefix=/usr $BUILD  \
            --mandir=/usr/share/man \
            --with-jpeg8            \
            --disable-static        \
            --docdir=/usr/share/doc/libjpeg-turbo-1.5.3  &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install -j1" 
