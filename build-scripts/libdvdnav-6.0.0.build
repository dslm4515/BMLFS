#! /bin/bash

# source: https://get.videolan.org/libdvdnav/6.0.0/libdvdnav-6.0.0.tar.bz2



./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/libdvdnav-6.0.0 --build=x86_64-linux-musl &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
