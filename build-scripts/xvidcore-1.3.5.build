#! /bin/bash

# source: http://downloads.xvid.org/downloads/xvidcore-1.3.5.tar.gz

cd build/generic &&
sed -i 's/^LN_S=@LN_S@/& -f -v/' platform.inc.in &&
./configure --prefix=/usr $BUILD &&

read -p "Compile? " && make -j4 &&

sed -i '/libdir.*STATIC_LIB/ s/^/#/' Makefile &&
read -p "Install? " && sudo -S porg -lp xvidcore-1.3.5 "make -j1 install" &&
sudo -S chmod -v 755 /usr/lib/libxvidcore.so.4.3  
