#! /bin/bash

# GTK+-3.24.10 
# source: http://ftp.gnome.org/pub/gnome/sources/gtk+/3.24/gtk+-3.24.10.tar.xz

cd build &&
meson --prefix=/usr     \
      -Dcolord=yes      \
      -Dgtk_doc=false   \
      -Dman=true        \
      -Dbroadway_backend=true .. &&
read -p "Compile?" && ninja -j2 &&
read -p "Install?" && sudo -S porg -lp GTK+-3.24.1 "ninja install"
