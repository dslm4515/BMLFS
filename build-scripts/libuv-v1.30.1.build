#! /bin/bash

# libUV 1.30.1
# Source: https://dist.libuv.org/dist/v1.30.1/libuv-v1.30.1.tar.gz

./autogen.sh                            &&
./configure --prefix=/usr --disable-static $BUILDTRUPLE 
read -p "Press Enter to compile" &&
make -j2 && 
read -p "Press Enter to install" &&
sudo -S porg -lD "make install"
