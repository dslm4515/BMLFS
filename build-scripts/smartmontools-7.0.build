#! /bin/bash

# Smartmontools 7.0
# source: https://downloads.sourceforge.net/smartmontools/smartmontools-7.0.tar.gz

./configure --prefix=/usr           \
            --sysconfdir=/etc       \
            --with-initscriptdir=no \
	    --with-libsystemd=no \
            --docdir=/usr/share/doc/smartmontools-7.0 \
            $BUILDTRUPLE  &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make install"
