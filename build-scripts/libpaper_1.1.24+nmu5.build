#! /bin/bash

autoreconf -fiv                &&
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-static &&
read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
sudo -S porg -lD+ "cp -v ../libpaper_1.1.24+nmu5.runparts  /usr/bin/run-parts" &&
sudo -S chmod -v 755 /usr/bin/run-parts
