#! /bin/bash

python2 bootstrap.py 

./waf configure --prefix=/usr      --libdir=/usr/lib \
                --confdir=/etc/mpv --enable-dvdread  \
                --enable-dvdnav    --enable-libarchive &&

read -p "Compile? " && ./waf build &&
read -p "Install? " && sudo -S porg -lD " ./waf install"
