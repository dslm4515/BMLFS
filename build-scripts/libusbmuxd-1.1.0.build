#! /bin/bash

# libusbmuxd 1.0.10
# source: https://github.com/libimobiledevice/libusbmuxd/archive/master.zip
# source: https://github.com/libimobiledevice/libusbmuxd/archive/1.0.10.tar.gz


autoreconf -vfi &&

patch -Np1 -i ../patches/CVE-2016-5104.patch

./configure  --prefix=/usr $BUILDTRUPLE &&

