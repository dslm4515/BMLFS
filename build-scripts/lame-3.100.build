#! /bin/bash

# LAME 3.100
# source: https://downloads.sourceforge.net/lame/lame-3.100.tar.gz

./configure --prefix=/usr --enable-mp3rtp \
    --disable-static --enable-mp3rtp \
    --enable-nasm $BUILDTRUPLE &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make pkghtmldir=/usr/share/doc/lame-3.100 install"
