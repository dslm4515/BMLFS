#! /bin/bash

# source: http://www.hboehm.info/gc/gc_source/gc-7.6.4.tar.gz

./configure --prefix=/usr      \
            --enable-cplusplus \
            --disable-static   \
	    --enable-mmap \
            --docdir=/usr/share/doc/gc-7.6.4 $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

