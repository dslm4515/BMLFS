#! /bin/bash

# Pangomm 2.42.0
# source: http://ftp.gnome.org/pub/gnome/sources/pangomm/2.42/pangomm-2.42.0.tar.xz

sed -e '/^libdocdir =/ s/$(book_name)/pangomm-2.40.2/' \
    -i docs/Makefile.in

./configure --prefix=/usr $BUILDTRUPLE &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make install"
