#! /bin/bash

# source: https://download.videolan.org/x264/snapshots/x264-snapshot-20180819-2245-stable.tar.bz2

./configure --prefix=/usr \
            --enable-shared \
            --disable-cli $BUILD &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
