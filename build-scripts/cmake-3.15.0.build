#! /bin/bash

# CMake 3.15.0
# Source: https://cmake.org/files/v3.15/cmake-3.15.0.tar.gz

./bootstrap --prefix=/usr        \
            --system-libs        \
            --mandir=/share/man  \
            --no-system-jsoncpp  \
            --no-system-librhash \
            --docdir=/share/doc/cmake-3.15.0 && 
read -p "Compile? " && make -j4  && 
read -p "Install? " && sudo -S porg -lD "make install"
