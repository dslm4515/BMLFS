#! /bin/bash

# source: http://ftp.gnome.org/pub/gnome/sources/libart_lgpl/2.3/libart_lgpl-2.3.21.tar.bz2

patch -Np1 -i ../libart_lgpl-2.3.21-upstream_fixes-1.patch &&

rm -v config.guess config.sub &&
ln -sv ../config.sub-musl config.sub &&
ln -sv ../config.guess-musl config.guess &&

./configure --prefix=/usr $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "mkae -j1 install"
