#! /bin/bash

# source: http://www.libsdl.org/projects/SDL_image/release/SDL_image-1.2.12.tar.gz

rm -v config.sub config.guess &&
ln -sv ../config.sub-musl config.sub &&
ln -sv ../config.guess-musl config.guess &&

./configure --prefix=/usr $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
