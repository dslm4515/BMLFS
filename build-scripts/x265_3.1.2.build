#! /bin/bash

# x265 3.1.2
# source: https://bitbucket.org/multicoreware/x265/downloads/x265_3.1.2.tar.gz

mkdir bld &&
cd    bld &&

cmake -DCMAKE_INSTALL_PREFIX=/usr ../source &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lp x265-3.1.2  "make install" &&
sudo -S porg -lp+ x265-3.1.2 "rm -vf /usr/lib/libx265.a "
