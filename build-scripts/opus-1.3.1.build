#! /bin/bash

# OPUS 1.3.1
# source: https://archive.mozilla.org/pub/opus/opus-1.3.1.tar.gz

./configure --prefix=/usr    $BUILDTRUPLE  \
            --disable-static \
            --docdir=/usr/share/doc/opus-1.3.1 &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make install"
