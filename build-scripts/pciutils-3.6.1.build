#! /bin/bash

read -p "Compile? " &&
make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes -j2 &&
read -p "Install? " &&
sudo -S porg -lD \
"make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes                 \
     install install-lib  -j1"      &&
sudo -S chmod -v 755 /usr/lib/libpci.so
