#! /bin/bash

# source: http://ftp.gnome.org/pub/gnome/sources/gnome-keyring/3.28/gnome-keyring-3.28.2.tar.xz

patch -Np0 -i ../gnome-keyring-sys-select-h.patch
sed -i -r 's:"(/desktop):"/org/gnome\1:' schema/*.xml &&

./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --with-pam-dir=/lib/security --build=x86_64-linux-musl &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
