#! /bin/bash 

# source: https://get.videolan.org/libdvdread/6.0.0/libdvdread-6.0.0.tar.bz2

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/libdvdread-6.0.0 $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

