#! /bin/bash

# PCI Utilities 3.6.2
# source: https://www.kernel.org/pub/software/utils/pciutils/pciutils-3.6.2.tar.xz

read -p "Compile? " &&
make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes -j2 &&
read -p "Install? " &&
sudo -S porg -lD \
"make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes                 \
     install install-lib "      &&
sudo -S chmod -v 755 /usr/lib/libpci.so
