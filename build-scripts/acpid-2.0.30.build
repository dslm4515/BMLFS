#! /bin/bash

# source: https://downloads.sourceforge.net/acpid2/acpid-2.0.30.tar.xz

./configure --prefix=/usr \
            --docdir=/usr/share/doc/acpid-2.0.30 &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install" 
sudo -S porg -lD+ "install -v -m755 -d /etc/acpi/events" &&
sudo -S porg -lD+ "cp -r samples /usr/share/doc/acpid-2.0.30"
