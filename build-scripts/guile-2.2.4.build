#! /bin/bash

# source: https://ftp.gnu.org/gnu/guile/guile-2.2.4.tar.xz

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/guile-2.2.4 $BUILD \
            --disable-error-on-warning &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install" &&
sudo -S porg -lD+ "mv /usr/lib/libguile-*-gdb.scm /usr/share/gdb/auto-load/usr/lib"
