#! /bin/bash

# LibPWquality 1.4.0
# source: https://github.com/libpwquality/libpwquality/releases/download/libpwquality-1.4.0/libpwquality-1.4.0.tar.bz2

./configure --prefix=/usr --disable-static \
            --with-securedir=/lib/security $BUILDTRUPLE &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make install"
