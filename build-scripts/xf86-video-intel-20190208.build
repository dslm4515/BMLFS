#! /bin/bash

# Xorg Intel Driver-20190208
# Source: http://anduin.linuxfromscratch.org/BLFS/xf86-video-intel/xf86-video-intel-20190208.tar.xz

./autogen.sh $XORG_CONFIG  $HOSTTRUPLE   \
      --enable-kms-only \
      --enable-uxa      \
      --mandir=/usr/share/man &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install" &&
sudo -S porg -lD+ "mv -v /usr/share/man/man4/intel-virtual-output.4 \
      /usr/share/man/man1/intel-virtual-output.1" &&
sudo -S sed -i '/\.TH/s/4/1/' /usr/share/man/man1/intel-virtual-output.1
