#! /bin/bash

# source: https://downloads.sourceforge.net/libdv/libdv-1.0.0.tar.gz

rm -v config.guess config.sub &&
ln -sv ../config.sub-musl config.sub &&
ln -sv ../config.guess-musl config.guess &&

./configure --prefix=/usr \
            --disable-xv \
            --disable-static $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
