#! /bin/bash

# source: http://0pointer.de/lennart/projects/libcanberra/libcanberra-0.30.tar.xz

rm -v build-aux/config.sub  build-aux/config.guess &&
ln -sv ../../config.guess-musl build-aux/config.guess &&
ln -sv ../../config.sub-musl build-aux/config.sub &&

./configure --prefix=/usr --disable-oss --enable-vala $BUILD &&
read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make docdir=/usr/share/doc/libcanberra-0.30 -j1 install"
