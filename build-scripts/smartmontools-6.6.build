#! /bin/bash

# source: https://downloads.sourceforge.net/smartmontools/smartmontools-6.6.tar.gz

patch -Np0 -i ../smartmontools-6.6-fix-musl.patch 
./configure --prefix=/usr           \
            --sysconfdir=/etc       \
            --with-initscriptdir=no \
            --docdir=/usr/share/doc/smartmontools-6.6 \
            --build=x86_64-linux-musl &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

