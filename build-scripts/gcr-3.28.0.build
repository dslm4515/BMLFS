#! /bin/bash

# Source: http://ftp.gnome.org/pub/gnome/sources/gcr/3.28/gcr-3.28.0.tar.xz

sed -i -r 's:"(/desktop):"/org/gnome\1:' schema/*.xml &&
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --without-gtk-doc &&

read -p "Compile? " && make -j4 &&

read -p "Install? " && sudo -S porg -lD "make -j1 install"

