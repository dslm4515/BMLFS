#! /bin/bash

# oxygen-icons5-5.60.0
# source: http://download.kde.org/stable/frameworks/5.60/oxygen-icons5-5.60.0.tar.xz

sed -i '/( oxygen/ s/)/scalable )/' CMakeLists.txt

mkdir build &&
cd    build &&

cmake -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ..

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lp oxygen-icons5-5.60.0 "make install"
