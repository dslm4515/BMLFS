#! /bin/bash

# LibPNG 1.6.37
# Source: https://downloads.sourceforge.net/libpng/libpng-1.6.37.tar.xz

gzip -cd ../patches/libpng-1.6.37-apng.patch.gz | patch -p1 &&
LIBS=-lpthread ./configure --prefix=/usr --disable-static $BUILDTRUMPLE &&

read -p "Compile?" && make -j2 &&
read -p "Install?" && sudo -S porg -lD "make install"
