#! /bin/bash

# source: https://downloads.sourceforge.net/lxde/lxappearance-0.6.3.tar.xz

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static  \
            --enable-dbus $BUILD &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install -j1" 
