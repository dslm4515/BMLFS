#! /bin/bash

# LXAppearance-0.6.3 
# source: https://downloads.sourceforge.net/lxde/lxappearance-0.6.3.tar.xz


./configure --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static  \
            --enable-dbus $BUILDTRUPLE &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install"
