#! /bin/bash

./configure --prefix=/usr          \
            --sysconfdir=/etc/lynx \
            --datadir=/usr/share/doc/lynx-2.8.9rel.1 \
            --with-zlib            \
            --with-bzlib           \
            --with-ssl             \
            --with-screen=ncursesw \
            --enable-locale-charseti &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install-full -j1" &&
sudo -S chgrp -v -R root /usr/share/doc/lynx-2.8.9rel.1/lynx_doc
