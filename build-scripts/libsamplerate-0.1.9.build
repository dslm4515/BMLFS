#! /bin/bash

# libsamplerate-0.1.9
# Source: http://www.mega-nerd.com/SRC/libsamplerate-0.1.9.tar.gz

rm -v Cfg/config.guess &&
rm -v Cfg/config.sub &&
cp -v ../files/config.sub-musl Cfg/config.sub &&
cp -v ../files/config.guess-musl Cfg/config.gues &&

./configure --prefix=/usr --disable-static \
           $BUILDTRUPLE &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make htmldocdir=/usr/share/doc/libsamplerate-0.1.9 install" 
