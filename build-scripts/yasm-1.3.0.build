#! /bin/bash

# source: http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz

sed -i 's#) ytasm.*#)#' Makefile.in &&
rm -v config/config.sub  config/config.guess 
ln -sv ../../config.guess-musl config/config.guess &&
ln -sv ../../config.sub-musl   config/config.sub &&

./configure --prefix=/usr $BUILD  &&
read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"
