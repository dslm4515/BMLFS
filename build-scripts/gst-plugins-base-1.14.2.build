#! /bin/bash

# source: https://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-1.14.2.tar.xz

./configure --prefix=/usr \
            --with-package-name="GStreamer Base Plugins 1.14.2 BMLFS" \
            --with-package-origin="http://www.linuxfromscratch.org/blfs/view/svn/" &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

