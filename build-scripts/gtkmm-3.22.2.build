#! /bin/bash

# source: http://ftp.gnome.org/pub/gnome/sources/gtkmm/3.22/gtkmm-3.22.2.tar.xz 

sed -e '/^libdocdir =/ s/$(book_name)/gtkmm-3.22.2/' \
    -i docs/Makefile.in

./configure --prefix=/usr $BUILD &&

