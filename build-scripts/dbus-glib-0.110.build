#! /bin/bash

# DBus Glib 0.110
# source: https://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-0.110.tar.gz

./configure --prefix=/usr $BUILDTRUPLE  \
            --sysconfdir=/etc \
            --disable-static  &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && sudo -S porg -lD "make install" 
