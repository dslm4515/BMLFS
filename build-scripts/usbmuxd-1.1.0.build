#! /bin/bash

# source: https://github.com/libimobiledevice/usbmuxd/archive/1.1.0.tar.gz

autoreconf -fvi &&

./configure --prefix=/usr --without-systemd &&

read -p "Compile? " && make -j4 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

# Add the user
sudo -S groupadd -g 23 usbmux
sudo -S useradd  -c "USB Mux Daemon User" \
	         -d /run/usbmuxd \
		 -u 23 -g usbmux \
		 -s /bin/false usbmux 
