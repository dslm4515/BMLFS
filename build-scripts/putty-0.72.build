#! /bin/bash

# PUTTY 0.72
# source: https://the.earth.li/~sgtatham/putty/0.72/putty-0.72.tar.gz

patch -Np0 -i ../patches/putty-0.72-void-fix-include.patch &&

CFLAGS="-Wno-error" ./configure --prefix=/usr --sysconfdir=/etc \
                                $BUILDTRUPLE &&
read -p "Compile?" && make -j2 &&
read -p "Install?" && sudo -S porg -lD "make install"
