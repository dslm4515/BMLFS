#! /bin/bash

# v4l-utils 1.16.6
# source: https://www.linuxtv.org/downloads/v4l-utils/v4l-utils-1.16.6.tar.bz2

patch -Np0 -i ../patches/v4l-utils-1.16.-void-musl.patch

autoreconf -ifv 

CFLAGS="-D__off_t=off_t -D__off64_t=off_t" LDFLAGS="-largp" \
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-static \
	    --disable-qv4l2 --disable-qvidcap  $BUILDTRUPLE &&
read -p "Compile?" && make -j2 &&
read -p "Install?" && sudo -S porg -lD "make install"
