#! /bin/bash

# libfm-extra 1.3.1
# source: https://downloads.sourceforge.net/pcmanfm/libfm-1.3.1.tar.xz

./configure --prefix=/usr $BUILDTRUPLE     \
            --sysconfdir=/etc \
            --with-extra-only \
            --with-gtk=no     \
            --disable-static  &&

read -p "Compile? " && make -j2 &&

read -p "Install? " && sudo -S porg -lp libfm-extra-1.3.1 "make install"
