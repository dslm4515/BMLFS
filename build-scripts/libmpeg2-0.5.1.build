#! /bin/bash

# source: http://libmpeg2.sourceforge.net/files/libmpeg2-0.5.1.tar.gz

rm -rf .auto/config.sub .auto/config.guess &&
ln -sv ../../config.sub-musl .auto/config.sub &&
ln -sv ../../config.guess-musl .auto/config.guess &&

sed -i 's/static const/static/' libmpeg2/idct_mmx.c &&

./configure --prefix=/usr    \
            --enable-shared  \
            --disable-static $BUILD &&

read -p "Compile? " && make -j2 &&
read -p "Install? " && sudo -S porg -lD "make -j1 install"

